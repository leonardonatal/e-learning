# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Angular-specific rules
[*.component.ts]
indent_size = 4 # Increase indentation for component files

[*.html]
indent_size = 4 # Increase indentation for HTML templates

[*.scss, *.css]
indent_size = 2 # Configure indentation for stylesheets
